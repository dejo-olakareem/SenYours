
<div class='blog_social_media'>
  <!-- Amazing resource: https://github.com/bradvin/social-share-urls -->
  <% @social_media_title = @blog.title.gsub!(/(<[^>]*>)|\n|\t/s) {" "} %>
  <% @social_media_summary = @blog.body.gsub!(/(<[^>]*>)|\n|\t/s) {" "} %>
  <% @social_media_url = "http://localhost:3000/blog/#{@blog.id}" %>
  <% @social_media_url = "senyours.io/blog/#{@blog.id}" %>
  <% @social_media_domain = "senyours.io" %>
  <script async defer src="//assets.pinterest.com/js/pinit.js"></script>
  <img class='hidden_pinterest_image' src="<%=@blog.image.large%>" alt="Pinterest_Image" data-pin-description="<%= @social_media_title %>" >

  <!-- LinkedIn -->
  <%= link_to "LINKEDIN", "http://www.linkedin.com/shareArticle?mini=true&url=#{@social_media_url}&title=#{@social_media_title}&summary=#{@social_media_summary}&source=#{@social_media_domain}", target: :_blank %>

  <!-- Twitter -->
  <%= link_to "TWITTER", "http://twitter.com/intent/tweet?status=#{@social_media_title}+#{@social_media_url}", target: :_blank %>

  <!-- Facebook -->
  <%= link_to "FACEBOOK", "http://www.facebook.com/sharer/sharer.php?u=#{@social_media_url}&title=#{@social_media_title}", target: :_blank %>

  <!-- Pinterest -->
  <%= link_to "PINTEREST", "https://www.pinterest.com/pin/create/button/", target: :_blank, 'data-pin-do' => `buttonBookmark`, 'data-pin-custom' => 'true', 'data-pin-url' => "#{@social_media_url}" %>

  <!-- Google+ -->
  <%= link_to "Google +", "https://plus.google.com/share?url=#{@social_media_url}&text=#{@social_media_title}", target: :_blank %>

  <!-- Reddit -->
  <%= link_to "Reddit", "https://reddit.com/submit?url=#{@social_media_url}&title=#{@social_media_title}", target: :_blank %>

  <!-- Digg -->
  <%= link_to "Digg", "http://www.digg.com/submit?url=#{@social_media_url}", target: :_blank %>

  <!-- Email -->
  <%= link_to "Email", "mailto:?subject=#{@social_media_title}&body=#{@social_media_summary}", target: :_blank %>


</div>
