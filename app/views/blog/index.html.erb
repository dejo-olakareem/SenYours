<% if session[:admin] == false %>
  <div id='index_container_background'>
    <%= link_to "Log in", password_input_path %>
    <div id='pagination_container'>
      <%= will_paginate @blogs, :id => 'my_element', :class => 'my_class' %>
    </div>
    <div id='index_container'>
      <% @blogs.each do |blog|%>
        <div id='index_blog_container'>
          <div id='index_blog_date_container'>
            <h3 id='index_blog_date'> <%= blog.created_at.strftime("%d %b %y") %> </h3>
          </div>
          <div id='index_blog_title_container'>
            <%= link_to raw(blog.title), blog_path(blog.id), id: 'index_blog_title' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% elsif session[:admin] == true %>
<%= link_to "Create Blog Post | ", new_blog_path %>
<%= link_to "Log Out", end_session_path %>
<%= will_paginate @blogs %>
  <% @blogs.each do |blog|%>
    <div id='index_container'>
      <div id='index_blog_container'>
        <div id='index_blog_date_container'>
          <h4> <%= blog.created_at.strftime("%d %b %y") %> </h4>
          <%= link_to "Edit Post", edit_blog_path(blog.id) %>
          <%= link_to "Delete Post", blog_path(blog.id), method: :delete %>
        </div>
        <div id='index_blog_title_container'>
          <h1><a href="/blog/<%= blog.id %>"><%= raw(blog.title) %></a></h1>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
