<% if session[:admin] == true %>
  <div id='index_container_background'>
    <div id="index_blog_admin_options">
      <%= link_to "Create Blog Post", new_blog_path, id: 'index_blog_admin_create_link' %>
      <%= link_to "Log Out", end_session_path, id: 'index_blog_admin_logout_link' %>
    </div>
    <div id='pagination_container'>
      <%= will_paginate @blogs %>
    </div>
    <div id='index_container'>
      <% @blogs.each do |blog|%>
        <div id='index_blog_container'>
          <div id='index_blog_date_container'>
            <h3 id='index_blog_date'> <%= blog.created_at.strftime("%d %b %y") %> </h3>
          </div>
          <div id='index_blog_edit_remove_container'>
            <%= link_to "Edit Post", edit_blog_path(blog.id), id: 'index_blog_admin_edit_link'  %>
            <%= link_to "Delete Post", blog_path(blog.id), method: :delete, id: 'index_blog_admin_delete_link'  %>
          </div>
          <div id='index_blog_title_container'>
            <%= link_to raw(blog.title), blog_path(blog.id), id: 'index_blog_title' %>
          </div>
        </div>
      <% end %>
    </div>
    <%= will_paginate @blogs %>
  </div>
<% else %>
  <div id='index_container_background'>
    <div id='pagination_container'>
      <%= will_paginate @blogs %>
    </div>
    <div id='index_container'>
      <% @blogs.each do |blog|%>
        <div id='index_blog_container'>
          <div id='index_blog_date_container'>
            <h3 id='index_blog_date'> <%= blog.created_at.strftime("%d %b %y") %> </h3>
          </div>
          <div id='index_blog_title_container'>
            <%= link_to raw(blog.title), blog_path(blog.id), id: 'index_blog_title' %>
          </div>
        </div>
      <% end %>
    </div>
    <%= will_paginate @blogs %>
    <div id='blog_log_in_link_container'>
      <%= link_to "Log In", password_input_path, id: 'blog_log_in_link' %>
    </div>
  </div>
<% end %>
