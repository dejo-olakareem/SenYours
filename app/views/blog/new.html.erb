<script src="https://cdn.ckeditor.com/ckeditor5/10.0.1/classic/ckeditor.js"></script>

<div id="new_blog_form_container">
    <div id="new_blog_form">
        <h1>Create New Blog Post:</h1>
        <%= form_for @blog, url: {action: "create"} do |f| %>
            <div id='new_blog_form_section'>
                <%= f.label :title %>
                <%= f.cktext_area :title %>
            </div>
            <div id='new_blog_form_section'>
                <%= f.label :body %>
                <%= f.cktext_area :body %>
            </div>
            <!-- <div id='new_blog_form_section'>
                <%= f.label :image %>
                <%= f.cktext_area :body %>
            </div> -->
            <div id='new_blog_form_section'>
                <%= f.submit "Create new post", class: "" %>
            </div>
        <% end %>
    </div>
</div>

<script>
ClassicEditor
.create( document.querySelector( '#editor' ) )
.catch( error => {
    console.error( error );
} );
</script>
