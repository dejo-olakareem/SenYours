<% if @user.identification === "Senior" %>
    <% if @user.stripe_user_id != nil %>
      <% if current_user.description && current_user.address %>
        <%= link_to 'Match with companions', users_path,style:'text-decoration:none; color:black' , class: 'btn comp_submit'  %>
      <% else %>
      <h4>Please take a moment to fill out your personal information so we can better match you with your new friendly Companions!</h4>
        <h6 class="edit_tag text-center"><a href="/users/<%=current_user.id %>/edit" class="edit_tag">Provide necessary information for verification</a></h6>
        <hr />
      <% end %>
    <% else %>
        <div id='stripe_account_ajax' class='container'>
            <h3 id='service_header'>Pay Without Worry:</h3>
            <p><strong>SenYours</strong> uses <strong>Stripe</strong> to help you pay Companions quickly and keep your personal and payment information secure. Thousands of companies around the world trust Stripe to process payments for their users. Set up a <strong>Stripe</strong> account to Safely pay Companions with <strong>SenYours</strong>!</p>
            <%= link_to "Create Stripe Account", "https://connect.stripe.com/express/oauth/authorize?response_type=code&client_id=#{ENV['STRIPE_CLIENT_ID']}&redirect_uri=http://localhost:3000/verify&stripe_user[business_type]=individual&stripe_user[phone_number]=#{@user.phone_number}&stripe_user[email]=#{@user.email}&stripe_user[first_name]=#{@user.first_name}&stripe_user[last_name]=#{@user.last_name}&state=senyours_verification_#{@user.id}", class: 'stripe_connect_button' %>
        </div>
    <% end %>
<% elsif @user.identification === "Companion" %>
    <% if @user.stripe_user_id != nil %>
        <div id='stripe_account_ajax' class='container'>
            <h3 id='service_header'>Account Balance:</h3>
            <p> Current <%= @balance.available[0].currency.upcase %> Balance: <span style='color:green;'>$<%= "%.2f" % Rational((@balance.available[0].amount),100) %></span> </p>
            <p> Pending <%= @balance.pending[0].currency.upcase %> Balance: <span style='color:green;'>$<%= "%.2f" % Rational((@balance.pending[0].amount),100) %></span> </p>
        </div>
    <% else %>
        <div id='stripe_account_ajax' class='container'>
            <h3 id='service_header'>Get Paid:</h3>
            <p><strong>SenYours</strong> uses <strong>Stripe</strong> to get you paid quickly and keep your personal and payment information secure. Thousands of companies around the world trust Stripe to process payments for their users. Set up a <strong>Stripe</strong> account to get paid with <strong>SenYours</strong>!</p>
            <%= link_to "Create Stripe Account", "https://connect.stripe.com/express/oauth/authorize?response_type=code&client_id=#{ENV['STRIPE_CLIENT_ID']}&redirect_uri=http://localhost:3000/verify&stripe_user[business_type]=individual&stripe_user[phone_number]=#{@user.phone_number}&stripe_user[email]=#{@user.email}&stripe_user[first_name]=#{@user.first_name}&stripe_user[last_name]=#{@user.last_name}&state=senyours_verification_#{@user.id}", class: 'stripe_connect_button' %>
        </div>
    <% end %>
<% end %>
