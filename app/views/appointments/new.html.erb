<%= form_for([@user, @appointment]) do |f| %>
    Start date:<%= f.date_field :start_date %>
    End date: <%= f.date_field :end_date %>
    Start time: <%= f.time_field :start_time %>
    End time: <%= f.time_field :end_time %>

    <%= f.hidden_field :senior_id, :value => current_user.id %>
    <%= f.hidden_field :companion_id, :value => @user.id %>

    <%= f.submit "Submit" %>
<% end %>
