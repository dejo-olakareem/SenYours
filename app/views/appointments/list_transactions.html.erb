<!-- If there are Appointments, display them. -->
<% if @appointments != nil %>
  <% @appointments.each do |appointment| %>
    <div>
      <h4>Appointment ID: <%= appointment.id %></h4>
      <h4>Appointment Senior: <%= appointment.senior_id %></h4>
      <h4>Appointment Companion: <%= appointment.companion_id %></h4>
    </div>
  <% end %>
<% else %>
  <div>
    <h1>You have no appointments.</h1>
    <h1>Appointments: <%= @appointments %></h1>
  </div>
<% end %>
