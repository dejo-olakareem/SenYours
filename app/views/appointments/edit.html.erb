<div style="margin-top: 60px;">
<%= form_for @appointment do |f| %>
    Start date:<%= f.date_field :start_date %>
    End date:<%= f.date_field :end_date %>
    Start time: <%= f.time_field :start_time %>
    End time: <%= f.time_field :end_time %>
    <%= radio_button("appointment", "accept","true") %>
    <%= label_tag(:accept, "true") %>
    <%= radio_button("appointment", "accept","false") %>
    <%= label_tag(:accept, "false") %><br>
    <%= f.hidden_field :senior_id, :value => @senior.id %>
    <%= f.hidden_field :companion_id, :value => @companion.id %>
    <%= f.submit "Submit" %>
<% end %>
</div>
