<div class="appointment_top_form container">
<%= form_for @appointment do |f| %>
    <div class="form_div">
        Start date:<%= f.date_field :start_date,class: 'user_responsive-input form_div', :disabled => true %>
    </div>
    <div class="form_div">
        End date: <%= f.date_field :end_date,class: 'user_responsive-input form_div', :disabled => true %>
    </div>
    <%= radio_button("appointment", "accept","true") %>
    <%= label_tag(:accept, "Accept") %>
    <%= radio_button("appointment", "accept","false") %>
    <%= label_tag(:accept, "Decline") %><br>
    <%= f.hidden_field :senior_id, :value => @senior.id %>
    <%= f.hidden_field :companion_id, :value => @companion.id %>
    <%= f.submit "Submit", class: ' btn form_submit' %>
<% end %>
</div>
