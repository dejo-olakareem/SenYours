Description:<%= @user.description %><br>
<% if final_rating(@user) >= 0 %>
  <%= final_rating(@user) %><br>
<% else %>
  <p class="notification">No rating yet</p>
<% end %>
Reviews:<br>
<% @user.reviews.each do |review| %>
  <%= review.comment %><br>
  Stars: <%= individaul_rating(review) %><br>
  by:<%= review.reviewer.email %><br>
<% end %>
Available to work<br>
Click on each date to make a request<br>
<% if aval(@user,current_user).length >= 1 %>
  <% aval(@user,current_user).each do |date| %>
    <%=link_to user_appointments_path(start_date: date,end_date: date, senior_id: current_user.id,companion_id: @user.id,accept: false), method: :post, remote: true do %>
      <button>
        <p class="notification"><%= date.strftime('%b') %></p>
        <p class="notification"><%= date.strftime('%d') %></p>
        <p class="notification"><%= date.strftime('%Y') %></p>
      </button>
    <% end %>
  <% end %>
<% end %>
