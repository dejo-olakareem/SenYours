<!-- Set this Date available & set Times available -->
<%=link_to add_available_day_path(current_user, available_day: { date: date, comment: "I am ready", user_id: current_user.id}), method: :post, remote: true, id: 'add_available_day_ajax_remove' do %>
  <button class="btn days_cal_but" style="background-color: white;">
    <!-- Display Day (name) of the Week -->
    <p class="notification work_p"><%= date.strftime('%a') %></p>
    <!-- Display Date (number) of the Week -->
    <p class="notification work_p"><%= date.strftime('%d') %></p>
  </button>
<% end %>
