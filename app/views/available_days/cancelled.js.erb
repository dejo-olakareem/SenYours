// Companion Popup Update:
    $('#appointment_pop_up_ajax_remove_<%= @selected_appointment.id %>').remove()

// Calendar Update:
    // Remove "set time" option for the now declined date
        $('#set_times_tab_<%= @selected_appointment.start_date %>').remove()
    // Remove html button for cancelling appointment
        $('#cancel_appointment_<%= @selected_appointment.start_date %>').remove()
    // Append partial unavailable(white) to containing element
        $("<%=j render :partial => 'available_days/set_date_unavailable' %>").appendTo("#set_date_append_<%= @selected_appointment.start_date %>")

    // Cancels the selected appointment. Removes the appointment from the DOM.
    $('#appointment_view_remove_<%= @selected_appointment.id %>').fadeOut(400, function() {
      $('#appointment_view_remove_<%= @selected_appointment.id %>').remove();
      $("#appointment_<%= @selected_appointment.id %>_info").remove();
      $("#horizontal_rule_remove_<%= @selected_appointment.id %>").remove();
    });
