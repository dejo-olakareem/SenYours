<div class="container">
<div class="row sen_img_app">
  <div class="col-lg-3 col-md-3 sen_image">
    <div class="sen_img_upper" <% if !@user.avatar.url %>
        style="background-image:url(/assets/avatar_image.png);"
      <% else %>
        style="background-image: url(<%=@user.avatar.large.url if @user.avatar? %>);">
      <% end %>

      <p class="comp_rate"><%= final_rating(@user) %>
        <i class="fa fa-star" style="color: orange;"></i>
      </p>
    </div>
    <div class="sen_img_lower">
      <p class="notification"><%= @user.city %></p>
      <p><%= @user.age %></p>
    </div>
  </div>
  <div class="col-lg-9 col-md-9 sen_app">
    <h1>Hello <%= @user.first_name %></h1>
    <h4>You became a companion <%= @user.created_at.strftime('%Y') %></h4>
    <% if current_user.id === @user.id %>
      <% if !current_user.description?   || !current_user.phone_number? || !current_user.address? %>
        <p>You must provide all required information to proceed
        <a class="edit_tag" href="/users/<%=current_user.id %>/edit">
                Required</a></p>
      <% else %>
        <a class="edit_tag" href="/users/<%=current_user.id %>/edit">
                Edit Profile</a>
      <% end %>
    <% end %>
    <% if @user.reviews.length === 0 %>
      <p><Strong>Reviews</Strong>: Your first review is by SenYours, keep it up</p>
    <% end %>
    <% if @seniors.count > 0 %>
      <p class="sen_app_par text-center">Upcoming Appointments</p>
    <% else %>
      <p class="sen_app_par text-center">You have no appointment</p>
    <% end %>
    <div class="row">
      <% @seniors.each do |appointment| %>
          <% if appointment.accept === false %>
          <div class="form_div daite">
          <button class="btn cal_but">
            <p class="notification">Waiting</p>
            <p class="notification">On</p>
            <p class="notification">Response</p>
          </button>
          </div>
          <% else %>
          <div class="form_div daite">
          <button class="btn cal_but">
            <p class="notification"><%= appointment.start_date.strftime('%b') %> <%= appointment.start_date.strftime('%d') %></p>
            <p class="notification">With</p>
            <p class="notification"><%= appointment.companion.first_name%></p>
          </button>
          </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>

  <div class="sen_rating">
    <div class="sen_stars text-center">
      <div>
        <p class="notification">Recommendation</p>
        <% wyr(@user).times do  %>
          <i class="fa fa-star" style="color: orange;"></i>
          <!-- <span style="color: orange;" class="text-center">â˜†</span> -->
        <% end %>
      </div>
      <div>
        <p class="notification">Companionship</p>
        <% comp_rate(@user).times do  %>
          <i class="fa fa-star" style="color: orange;"></i>
        <% end %>
      </div>
      <div>
        <p class="notification">Communication</p>
        <% comm_rate(@user).times do  %>
          <i class="fa fa-star" style="color: orange;"></i>
        <% end %>
      </div>
    </div>
    <div class="row review_div">
      <% @user.reviews.each do |review|%>
        <div class="col-lg-4">
          <div class="row form_div">
            <div class="col-lg-3 col-md-3 col-3">
              <img src=<%='https://cdn1.nursinglicensemap.com/content/9d3968d2dc1b4bdeb09b74e20999ade4/Registered_nurse.jpg'%> class="img-circle responsive-image">
            </div>
            <div class="col-lg-9 col-md-9 col-9 form_div">
              <p class="notification rev_paragraphs"><%= review.comment %></p>
              <p class="notification rev_paragraphs"><%= review.reviewer.email %></p>
              <p class="notification rev_paragraphs"><%= individaul_rating(review) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
