<body style="background-color: #f5f5f5">
<% if current_user.id === @user.id  %>
    <div class="container">
        <div class="row" >
            <div class="col-lg-2 col-md-0 col-0 edit_tab1">
                <%= link_to 'Edit', edit_user_path(current_user), class: 'edit_tag' %><br>
                <%= link_to 'View Profile', user_path(current_user), class: 'edit_tag' %>
            </div>
            <div class="col-lg-10 col-md-12 col-12 edit_tab2">
            <div class="comp_edit_req"><p>Required</p></div>
                <%= form_for @user do |f| %>
                    <div class="container text-center comp_edit_form_top">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>Picture</p></div>
                            <div class="col-lg-10 col-md-10 col-12 form_div">
                                <span class="picture">
                                    <div class="image-upload">
                                       <label for="file-input">
                                         <span class="fa fa-camera edit_tag"></span>
                                       </label>
                                        <%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png',id: 'file-input' %>
                                    </div>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>First Name</p></div>
                            <div class="col-lg-10 col-md-10 col-12 form_div">
                                <%= f.text_field :first_name,required: true, class: 'edit_responsive-input form-control', :maxlength => 15 %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>Last Name</p></div>
                            <div class="col-lg-10 col-md-10 col-12 form_div">
                                <%= f.text_field :last_name,required: true,class: 'edit_responsive-input form-control', :maxlength => 15 %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>Birth date</p></div>
                            <div class="col-lg-10 col-md-10 col-12 form_div">
                                <%= f.date_field :dob,required: true,class: 'edit_responsive-input form-control' %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>Email</p></div>
                            <div class="col-lg-10 col-md-10 col-12 form_div">
                                <%= f.text_field :email,required: true,class: 'edit_responsive-input form-control' %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>Address</p>
                            </div>
                            <div class="col-lg-10 col-md-10 col-12 form_div">
                                <%= f.text_field :address,required: true,class: 'edit_responsive-input form-control' %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>State/City</p>
                            </div>
                            <div class="col-lg-10 col-md-10 col-12 form_div">
                                <div class="row select_div">
                                    <div class="col-lg-2 col-md-2">
                                        <%= f.select :state, options_for_select(us_states), {}, class: "select_input_lead" %>
                                    </div>

                                    <div class="col-lg-10 col-md-10 col-12">
                                      <%= select_tag "user[city]",options_for_select(CS.cities(:ca,:us).map{|value| [value,value]},@user.city) ,class:"form-control",id:"states-of-country" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- <div class="row">
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>City</p></div>
                            <div class="col-lg-10 col-md-10 col-12 form_div">
                                <select id="states-of-country" name="project[state]">
                                <option value="" selected="">Select Your City</option>
                                <% CS.cities(:ca,:us).each do |value| %>
                                <option value="<%= value%>"><%= value %></option>
                                <% end %>
                                </select>
                                <%#= f.text_field :city,class: 'edit_responsive-input form-control' %>
                                 <%#= f.select :city, options_for_select(cities) %>
                                 <! <select id="cities-of-state" name="user[city]">
                                        <option value="" selected="">Select Your City</option>
                                    </select> -->
                            <!-- </div> -->
                        <!-- </div> -->
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>Zip code</p></div>
                            <div class="col-lg-10 col-md-10 col-12 form_div">
                                <%= f.text_field :zipcode,required: true,class: 'edit_responsive-input form-control', :maxlength => 5 %>
                            </div>
                        </div>
                         <div class="row">
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>Phone Number</p></div>
                            <div class="col-lg-10 col-md-10 col-12 form_div">
                                <%= f.text_field :phone_number,required: true,class: 'edit_responsive-input form-control', :maxlength => 10 %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>Description</p></div>
                            <div class="col-lg-10 col-md-10 col-12 form_div">
                                <%= f.text_area :description,required: true,class: 'descrip', :maxlength => 250 %>
                            </div>
                        </div>
                            <div class="col form_div">
                                <%= f.submit "Save", class: 'btn form_submit' %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
<% end %>
</body>



