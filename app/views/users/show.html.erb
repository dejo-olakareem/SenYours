<% if current_user %>
  <%= @user.description %><br>
  <% if @user.availability === true && current_user.id != @user.id %>
    <%= link_to "Make a Request", new_user_appointment_path(@user) %>
  <% end %>
  <% if current_user.id === @user.id %>
  <%= link_to "Update your account", edit_user_path(@user) %>
  <% end %>
<% end %>

