<h1><% provide(:title, "Forgot password") %>
<div class="container text-center form_top">
<h1>Forgot password</h1>
    <%= form_tag password_resets_path do |f| %>
      <div class="form_div">
      <%= text_field_tag :email,params[:email], class: 'responsive-input', placeholder: 'Email' %>
      </div>
      <%= submit_tag "Submit", class: "btn sign_in_form_submit" %>
    <% end %>
</div>
