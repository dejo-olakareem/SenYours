<% provide(:title, 'Reset password') %>
<%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
  <div class="container text-center form_top">
<h1>Reset password</h1>
    <%= hidden_field_tag :email, @user.email %>
    <div class="form_div">
       <%= f.password_field :password, class: 'responsive-input', placeholder: 'Password' %>
    </div>
    <div class="form_div">
       <%= f.password_field :password_confirmation, class: 'responsive-input', placeholder: 'Password' %>
    </div>

    <%= f.submit "Update password", class: "btn sign_in_form_submit" %>
  </div>
<% end %>
